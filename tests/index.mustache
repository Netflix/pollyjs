<html>
  <head>
    <meta charset="utf-8">
    <title>Polly.JS Tests</title>
    <link rel="icon" href="../docs/assets/images/favicon.ico" type="image/x-icon">
    <link href="../node_modules/mocha/mocha.css" rel="stylesheet"/>
    {{#css_files}}
      <link rel="stylesheet" href="{{src}}">
    {{/css_files}}
  </head>
  <body>
    <div id="mocha"></div>

    <script src="../node_modules/chai/chai.js"></script>
    <script src="../node_modules/mocha/mocha.js"></script>
    <script src="/testem.js"></script>

    <script>
      window.expect = window.chai.expect;
      mocha.setup({ ui: 'bdd', noHighlighting: true });
    </script>


    {{#serve_files}}
      <script src="../{{src}}"></script>
    {{/serve_files}}

    <script>
        mocha.checkLeaks();
        mocha.globals([
          /**
           * The following globals are inserted by Internet Explorer's developer tools.
           * IE injects these into the running context for debugging purposes.
           * This confuses mocha as it thinks it's observed a memory leak between runs.
           */
          '$0', '$1', '$2', '$3', '$4', '$_', '__BROWSERTOOLS_DOMEXPLORER_ADDED'
        ]);
        mocha.run();
    </script>
  </body>
</html>
